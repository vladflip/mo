.home
	margin-top  60px
	
	&_posts
		// width 700px
		
	.container
		display flex
		justify-content space-between
	
	&_more-posts
		margin auto
		text-align center
		a
			margin 60px auto 0
			display inline-block
			font-size 1.3em
			border 2px solid $green
			color $green
			padding 10px 15px
			cursor pointer
			border-radius 20px
			transition color 250ms ease-in-out, background-color 250ms ease-in-out
			
			&:hover
				color white
				background-color $green
		
.post
	margin-bottom 50px
	width 740px
	@extends $material
	
	&:first-child
		margin-top 0
	
	&_thumbnail
		text-align center
		
		img
			max-width 640px
			
	&_title
		color #202020
		text-align center
		font-size 2em
		font-weight 400
		margin-top 25px	
		
	&_date
		margin 1em 0
		position relative
		color black
		font-weight 400
		font-size 1em
		text-align center
		
		&--large
			font-size 1.5em
			
		&:after
			content ''
			position absolute
			bottom -1em
			width 2em
			height 1px
			left calc(50% - 1em)
			background #eee
	
	&_excerpt
		margin 1em auto 2.4em
		width 88%
		text-align center
		font-size 1em
		line-height 1.6em
		font-weight 400
		color #898989
		
	&_button
		position relative
		
		&:before,
		&:after
			content ''
			position absolute
			top 16px
			height 1px
			background #eeeeee
			width 42%
			display block
			
		&:before
			left 0
		&:after
			right 0
			
		& a
			margin 0 auto
			display block
			width 55px
			color $blue
			font-weight 400
			font-size 0.9em
			padding 5px 15px
			border-radius 20px
			border 2px solid $blue
			
			transition background-color 150ms ease, color 150ms ease
			
			&:hover
				color white
				background-color $blue