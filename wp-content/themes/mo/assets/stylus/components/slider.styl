.slider
	z-index -20
	
	&_item
		
		background-size cover
		background-position center
		background-repeat no-repeat
		
		width 100%
		height 450px
		background-color $green
		
	.owl-controls
		margin-top 10px
		text-align center
		
		.owl-dot
			display inline-block
			cursor pointer
			background-color #c0c0c0
			border-radius 20px
			width 14px
			height 14px
			margin 5px 7px
			
			&.active
				background-color $green
			