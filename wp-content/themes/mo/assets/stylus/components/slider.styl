.slider
	cursor grab
	
	&_item		
		width 100%
		img
			display block
		
	.owl-controls
		margin-top 10px
		text-align center
		
		.owl-dot
			display inline-block
			cursor pointer
			background-color #c0c0c0
			border-radius 20px
			width 14px
			height 14px
			margin 5px 7px
			
			&.active
				background-color $green
			