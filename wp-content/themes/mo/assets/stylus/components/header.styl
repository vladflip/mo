.header
			
	&_top
		background-color $blacker
		height 60px
		z-index 20
		
		.container
			display flex
			justify-content space-between

	&_socials
		margin 0
		padding 0
		list-style none
		display flex
		align-items center
		
		a
			padding 5px 10px
			color white
			display block
			font-size 1.3em
			
			transition all 250ms ease-in-out
			
			&:hover
				color lighten($blue, 15%)
		
	&_logo
		padding 20px 0
		overflow hidden
		&-item
			height 200px
			width 100%
			background url(../img/logo.png) no-repeat center
			background-size contain
		
.menu
	color white
	
	&_list, &_sub
		list-style none
		padding 0
		margin 0
		display flex
		
		a
			padding 20px
			display block
			font-size 1em
			font-weight 400

	&_list
		justify-content center
		
		&>li
			position relative
			transition color 250ms ease-in-out
			text-transform uppercase
			
			a
				font-weight 700
				
			&:hover
				color darken($green, 10%)
				
		&>li.current-menu-item,
		&>li.current-menu-parent
			color darken($green, 10%)
				
	&_list li:hover &_sub
		opacity 1
		transform translateY(0px)
		visibility visible
		
	&_sub
		z-index 2
		position absolute
		color white
		flex-direction column
		font-size .9em
		width 300px
		opacity 0
		transform translateY(-10px)
		visibility hidden
		transition transform 250ms, opacity 200ms, visibility 200ms
		background-color #333
		
		li
			transition background-color 200ms ease-in-out
			text-transform none
			
			&.current-menu-item
				color white
				background-color $green
			
			&:hover
				background-color $green !important