.header	
	&_top
		height 50px
		background-color lighten($blue, 30)
		
		.container
			display flex
			height 50px
			justify-content flex-end
		
	&_links
		margin 0
		padding 0
		list-style none
		display flex
		
		a
			padding 15px 8px
			color #fff
			display block
			font-size 1.2em
		
	&_logo
		margin 20px 0
		height 250px
		overflow hidden
		&-item
			height 250px
			width 100%
			position fixed	
			z-index -1
			background url(../img/logo.png) no-repeat center
		
.menu
	z-index 10
	background-color white
	height 60px
	border-top 1px solid #eee
	border-bottom 1px solid #eee
	
	&_list, &_sub
		list-style none
		padding 0
		margin 0
		display flex
		
		a
			padding 20px
			display block
			font-size 1em
			font-weight 400

	&_list
		justify-content center
		font-family 'Roboto Slab'
		font-weight 400
		
		li
			position relative
			transition background-color 250ms ease-in-out, color 250ms ease-in-out
				
			&:hover
				background-color lighten($blue, 10)
				color white
				
	&_list li:hover &_sub
		opacity 1
		z-index 10
		transform translateY(0px)
		visibility visible
		background-color #333
		
	&_sub
		position absolute
		color white
		flex-direction column
		font-size .9em
		width 200px
		opacity 0
		transform translateY(-10px)
		visibility hidden
		transition transform 250ms, opacity 200ms, visibility 200ms, background-color 200ms
		background-color transparent
		z-index -10
		
		li
			transition background-color 200ms ease-in-out
			
			&:hover
				background-color lighten($blue, 10) !important