.pagination
	text-align center
	
	.wp-pagenavi
		
		display inline-block
		
		.pages, .current, .page, .nextpostslink, .previouspostslink
			@extends $material
			padding 10px 25px	
			font-size 1.3em
			text-align center
			transition color 250ms ease-in-out, background-color 250ms ease-in-out
		
		.pages
			margin-right 25px
			
		.current, .page, .nextpostslink, .previouspostslink
			&:hover
				color white
				background-color darken($blue, 10%)
		
		.current
			color white
			background-color darken($blue, 10%)
			
